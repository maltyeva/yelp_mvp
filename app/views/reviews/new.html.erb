<h1>New Review</h1>
<!-- localhost:3000/restaurants/42/reviews -->
<form action="/restaurants/42/reviews" method="post">
</form>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>